<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.google.android.gms.analytics.samples.mobileplayground"
      android:versionCode="2"
      android:versionName="1.1">
    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application android:icon="@drawable/icon" android:label="@string/app_name"
        android:allowBackup="false" android:name=".AnalyticsSampleApp">
        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <activity android:name=".MobilePlayground"
                  android:label="@string/app_name"
                  android:theme="@style/Theme.AppCompat">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".AppviewFragment"
            android:label="@string/app_name"></activity>
        <activity android:name=".EventFragment"
            android:label="@string/app_name"></activity>
        <activity android:name=".ExceptionFragment"
            android:label="@string/app_name"></activity>
        <activity android:name=".EcommerceFragment"
            android:label="@string/app_name"></activity>
        <activity android:name=".SocialFragment"
            android:label="@string/app_name"></activity>
        <activity android:name=".TimingFragment"
            android:label="@string/app_name"></activity>

    </application>
</manifest>